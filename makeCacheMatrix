makeCacheMatrix <- function(x = matrix()) {
        inv <- NULL
        set <- function(y) {         ##### saving matrix in catch and delite from catch previosly saved inverse matrix 
                x <<- y
                inv <<- NULL
        }
        get <- function() x                        
        setInverse <- function() inv <<- solve(x) #calculate the inverse
        getInverse <- function() inv              # getting inverse from catch 
        list(set = set,
             get = get,
             setInverse = setInverse,
             getInverse = getInverse)
}



cacheSolve <- function(x, ...) {
        ## Return a matrix that is the inverse of 'x'
        inv <- x$getInverse()
        if (!is.null(inv)) {                    ### if there were previously inverse matrix in will be taken from cach
                message("getting cached data")
                return(inv)
        }
        mat <- x$get()
        inv <- solve(mat, ...)
        x$setInverse(inv)
        inv
}
